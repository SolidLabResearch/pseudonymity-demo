{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "lib": [
      "es2021"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "diagnostics": true,
    "extendedDiagnostics": true,
    "generateCpuProfile": "profile.cpuprofile",

  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],

}
